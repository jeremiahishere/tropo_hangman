<h1>Listing games</h1>

<table>
  <tr>
    <th>User</th>
    <th>Word</th>
    <th>In progress</th>
    <th>Guessed letters</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.user_id %></td>
    <td><%= game.word_id %></td>
    <td><%= game.in_progress %></td>
    <td><%= game.guessed_letters %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

